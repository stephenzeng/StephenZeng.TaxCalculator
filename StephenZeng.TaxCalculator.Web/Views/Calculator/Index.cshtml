@model StephenZeng.TaxCalculator.Web.Models.TaxCalculateViewModel

@{
    ViewBag.Title = "Tax Calculator";
    var taxRatesList = ViewBag.TaxRatesList as IEnumerable<SelectListItem>;
}

<div class="row">
    <div class="col-md-5">
        @using (Html.BeginForm(FormMethod.Post))
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="fa fa-tags"></span>
                    Your input
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.TaxableIncome, new {@class = "control-label"})
                        <div>
                            @Html.TextBoxFor(m => m.TaxableIncome, new {@class = "form-control", placeholder="Input your income without any digits"})
                            @Html.ValidationMessageFor(m => m.TaxableIncome)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.SelectedYear)
                        <div>
                            @Html.DropDownListFor(m => m.SelectedYear, taxRatesList, new {@class = "form-control"})
                        </div>
                    </div>
                    <div class="form-group" style="margin-top: 50px;">
                        <button type="submit" class="btn btn-default pull-right" style="width: 150px;">Calculate it!</button>
                    </div>

                </div>
            </div>
        }
    </div>
    <div class="col-md-7">
        @if (Model != null && Model.Result != null)
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="fa fa-tags"></span>
                    Your calculation result
                </div>
                <div class="panel-body">
                    <div class="row">
                        @Html.LabelFor(m => m.SelectedYear, new {@class = "col-md-3 control-label"})
                        @Html.DisplayFor(m => m.SelectedYear, new {@class = "col-md-4 form-control"})
                    </div>
                    <div class="row">
                        @Html.LabelFor(m => m.TaxableIncome, new {@class = "col-md-3 control-label"})
                        @Html.DisplayFor(m => m.TaxableIncome, new {@class = "col-md-4 form-control"})
                    </div>
                    <div class="row">
                        @Html.LabelFor(m => m.Result.TotalAmount, new {@class = "col-md-3 control-label"})
                        @Html.DisplayFor(m => m.Result.TotalAmount, new {@class = "col-md-4 form-control"})
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <span class="fa fa-tags"></span>
                            Details
                        </div>
                        <div class="panel-body">
                            <table class="table table-striped table-condensed margin-bottom-0">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Result.Items)
                                    {
                                        <tr>
                                            <td>@item.Name</td>
                                            <td>@Html.DisplayFor(m => item.Amount)</td>
                                        </tr>
                                    }
                                    <tr>
                                        <td>Total</td>
                                        <td>@Html.DisplayFor(m => m.Result.TotalAmount)</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</div>




