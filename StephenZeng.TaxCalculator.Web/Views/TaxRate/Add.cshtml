@model StephenZeng.TaxCalculator.Domain.Models.TaxRate

@{
    ViewBag.Title = "Add tax rate";
}

@using (Html.BeginForm("Add", "TaxRate", FormMethod.Post, new { role = "form" }))
{
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="fa fa-tags"></span>
                    Basic information
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Year, new { @class = "control-label" })
                        <div>
                            @Html.TextBoxFor(m => m.Year, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Description, new { @class = "control-label" })
                        <div>
                            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div>
                @for (var i = 0; i < Model.Items.Count; i++)
                {
                    @Html.EditorFor(m => m.Items[i])
                }
            </div>

        </div>

    </div>
    
    <div class="form-group" style="margin-top: 50px;">
        <button type="submit" class="btn btn-default pull-right" style="width: 150px;">Submit</button>
    </div>
    
}


