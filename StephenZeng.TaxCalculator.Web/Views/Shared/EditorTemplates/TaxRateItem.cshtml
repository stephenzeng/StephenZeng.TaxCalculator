@model StephenZeng.TaxCalculator.Domain.Models.TaxRateItem

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="fa fa-tags"></span>
        Item
    </div>
    <div class="panel-body">
        <div class="form-group">
            @Html.LabelFor(m => m.Description, new { @class = "control-label" })
            <div>
                @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Thresholds, new { @class = "control-label" })
            <div>
                @if (Model != null && Model.Thresholds != null)
                {
                    for (var i = 0; i < Model.Thresholds.Count; i++)
                    {
                    <div style="padding: 2px;">
                        @Html.EditorFor(m => m.Thresholds[i])
                    </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
